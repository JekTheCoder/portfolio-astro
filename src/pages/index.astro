---
import Document from "../layouts/Document.astro";
import Badge from "@/components/Badge.astro";
import Link from "@/components/Link.astro";

import Experience from "@/components/Experience.astro";

import TimelineList from "@/components/timeline/TimelineList.astro";
import TimelineItem from "@/components/timeline/TimelineItem.astro";
import TimelineItemTitle from "@/components/timeline/TimelineItemTitle.astro";
import TimeRange from "@/components/timeline/TimeRange.astro";
import About from "@/components/About.astro";
import Contact from "@/components/Contact.astro";

const company = {
	name: "ATIRPAY Solutions",
	url: "https://atirpay.com",
};

const timeline = [
	{
		jobTitle: "FullStack Jr. Developer",
		company,
		description: `Served as the lead developer for both backend and frontend of multiple highly interactive applications. Effectively managed timelines and personnel, organizing tasks efficiently to significantly enhance productivity.`,
		time: "March 2023 - Present",
	},
	{
		jobTitle: "Angular Jr. Developer",
		company,
		description: `Developed new features and implemented modifications to existing ones. Identified and resolved performance issues. Took initiative to standardize critical elements of the main application, including forms, paginated tables, loading states, and error reporting. Achieved significant enhancements in user experience. Successfully created several client-only web applications from scratch`,
		time: "September 2022",
	},
];
---

<style>
	.init {
		min-height: calc(100vh - var(--header-height));
		min-height: calc(100dvh - var(--header-height));
	}
</style>

<Document>
	<section
		class="init flex flex-col justify-between max-w-5xl lg:max-w-6xl mx-auto px-2 md:px-6 py-6 md:py-24"
	>
		<div class="">
			<div>
				<h1 class="inline-block text-8xl font-bold text-bold">
					Hello, I'm Jeshua
				</h1>

				<div class="inline-block align-bottom md:mb-6 mt-2">
					<a
						target="_blank"
						rel="noopener"
						href="https://www.linkedin.com/in/jeshua-hinostroza/"
					>
						<Badge>Ready to work ;)</Badge>
					</a>
				</div>
			</div>

			<h2 class="text-4xl lg:text-5xl text-bold font-medium mb-6">
				+2 years experience. <span
					class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-blue-500"
					>Developer</span
				> for the web.
			</h2>

			<p class="text-justify mt-1 text-2xl">
				Full-stack developer skilled in driving to production high-quality
				systems and UIs for the better user experience.
			</p>

			<Contact />
		</div>

		<div class="flex justify-center gap-x-4 items-end text-xl">
			<Link href="#projects"> Projects </Link>
			<Link href="#experience"> Experience </Link>
		</div>
	</section>

	<section id="experience" class="bg-gray-800 px-4 py-12 mb-12">
		<div class="container mx-auto">
			<h2 class="text-bold font-medium text-4xl mb-6">Laboral Experience</h2>

			<TimelineList>
				{
					timeline.map((item) => (
						<TimelineItem>
							<TimeRange time={item.time} />

							<TimelineItemTitle>
								<span class="text-cyan-400">{item.jobTitle}</span>

								<span class="">&#8226;</span>

								<a target="_blank" href={item.company.url}>
									{item.company.name}
								</a>
							</TimelineItemTitle>

							<p class="mb-4 text-base font-normal">{item.description}</p>
						</TimelineItem>
					))
				}
			</TimelineList>
		</div>
	</section>

	<section id="projects" class="max-w-3xl lg:container mx-auto my-5 mb-12 px-2">
		<h2 class="text-bold font-medium text-4xl mb-6">Projects</h2>

		<Experience />
	</section>

	<About />
</Document>
