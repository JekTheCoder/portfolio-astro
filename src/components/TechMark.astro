---
import rustIcon from "@/public/icons/rust.svg?raw";
import svelteIcon from "@/public/icons/svelte.svg?raw";
import astroIcon from "@/public/icons/astro.svg?raw";
import tailwindIcon from "@/public/icons/tailwind.svg?raw";
import solidIcon from "@/public/icons/solid.svg?raw";

const data = {
  rust: {
    name: "Rust",
    icon: rustIcon,
    class: "text-white border-white bg-white/10",
  },

  svelte: {
    name: "Svelte",
    icon: svelteIcon,
    class: "text-[#FF3E00] border-[#FF3E00] bg-[#FF3E00]/10",
  },

  astro: {
    name: "Astro",
    icon: astroIcon,
    class: "text-[#BC52EE] border-[#BC52EE] bg-blue-[#BC52EE]/10",
  },

  tailwind: {
    name: "TailwindCSS",
    icon: tailwindIcon,
    class: "text-[#06B6D4] border-[#06B6D4] bg-[#06B6D4]/10",
  },

  solid: {
    name: "SolidJS",
    icon: solidIcon,
    class: "text-[#2C4F7C] border-[#2C4F7C] bg-[#2C4F7C]/10",
  },
};

interface Props {
  tech: string;
}

const { tech } = Astro.props;
const techData = (tech: string) => data[tech as keyof typeof data];
---

<span
  class={`text-sm inline-flex items-center gap-1 border rounded-full pl-1 pr-2 ${techData(tech).class}`}
>
  <div class="w-3 h-3">
    <Fragment set:html={techData(tech).icon} />
  </div>
  {techData(tech).name}
</span>
