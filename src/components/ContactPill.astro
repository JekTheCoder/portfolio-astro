---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class={`gap-2 px-4 py-1 rounded-full 
transition  bg-gradient-to-r from-gray-800 to-gray-700 border border-gray-600 text-bold focus-visible:ring-yellow-500/80 text-md hover:from-gray-800 hover:to-gray-900 hover:border-gray-500 group max-w-fit focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black`}
  target="_blank"
  href={href}><slot /></a
>
