---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span
  class={`${className} rounded-md px-2 py-1 text-sm border bg-green-100/10 shadow shadow-green-500 font-normal text-nowrap`}
  ><slot /></span
>

<style>
  @keyframes light-pulse {
    0% {
      @apply text-green-500 border-green-600 shadow-green-500/0;
    }
    50% {
      border-color: #5aff88;
      color: #5aff88;
      --tw-shadow-color: #5aff886e;
    }
    100% {
      @apply text-green-500 border-green-600 shadow-green-500/0;
    }
  }

  span {
    animation: light-pulse 3s infinite ease-in-out;
  }
</style>
