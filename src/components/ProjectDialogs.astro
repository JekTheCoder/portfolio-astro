---
import { PROJECTS } from "@/lib/const/projects";
import ProjectDialog from "./ProjectDialog.tsx";

import _, { DialogAxis } from "./EmergentDialog";
import ProjectContent from "./ProjectContent.astro";

const props: Record<
  string,
  {
    containerClass: string;
    contentClass?: string;
    dialogAxis: DialogAxis;
  }
> = {
  stopify: {
    containerClass: "grid sm:flex max-h-[36rem] max-w-[70rem]",
    dialogAxis: DialogAxis.Horizontal,
    contentClass: "w-80",
  },
  cco: {
    containerClass: "max-w-[50rem]",
    dialogAxis: DialogAxis.Vertical,
    contentClass: "w-full",
  },
  catstagram: {
    containerClass: "grid sm:flex flex-row-reverse max-h-[36rem] max-w-[50rem]",
    dialogAxis: DialogAxis.Horizontal,
    contentClass: "w-80",
  },
  "term-chess": {
    containerClass: "flex-col-reverse max-w-[50rem]",
    dialogAxis: DialogAxis.Vertical,
    contentClass: "w-full",
  },
  blog: {
    containerClass: "grid sm:flex max-h-[36rem] max-w-[60rem]",
    dialogAxis: DialogAxis.Horizontal,
    contentClass: "w-80",
  },
};
---

{
  PROJECTS.map((p) => (
    <ProjectDialog
      client:load
      projectId={p.id}
      image={p.image}
      video={p.video}
      name={p.name}
      containerClass={props[p.id]?.containerClass}
      dialogAxis={props[p.id]?.dialogAxis}
    >
      <ProjectContent project={p} contentClass={props[p.id]?.contentClass} />
    </ProjectDialog>
  ))
}
