---
import { PROJECTS } from "@/lib/const/projects";
import ProjectDialog from "./ProjectDialog.tsx";

import _, { DialogOpenMode } from "./EmergentDialog";
import ProjectContent from "./ProjectContent.astro";

const props: Record<
	string,
	{
		containerClass: string;
		contentClass?: string;
		pictureClass?: string;
		openMode: DialogOpenMode;
	}
> = {
	stopify: {
		containerClass: "flex max-h-[36rem] max-w-[70rem]",
		openMode: DialogOpenMode.MainlyHorizontal,
		contentClass: "lg:w-80",
	},
	cco: {
		containerClass: "max-w-[50rem]",
		openMode: DialogOpenMode.Vertical,
		contentClass: "w-full",
	},
	catstagram: {
		containerClass: "flex lg:flex-row-reverse lg:max-h-[36rem] max-w-[50rem]",
		openMode: DialogOpenMode.MainlyHorizontal,
		contentClass: "lg:w-80",
	},
	"term-chess": {
		containerClass: "flex-col-reverse max-w-[50rem]",
		openMode: DialogOpenMode.Vertical,
		contentClass: "w-full",
	},
	blog: {
		containerClass: "lg:max-h-[36rem] max-w-[60rem]",
		openMode: DialogOpenMode.MainlyHorizontal,
		contentClass: "lg:w-80",
	},
};
---

{
	PROJECTS.map((p) => (
		<ProjectDialog
			client:load
			projectId={p.id}
			image={p.image}
			video={p.video}
			name={p.name}
			containerClass={props[p.id]?.containerClass}
			openMode={props[p.id]?.openMode}
		>
			<ProjectContent project={p} contentClass={props[p.id]?.contentClass} />
		</ProjectDialog>
	))
}
