---
import Header from "@/components/layout/Header.astro";
import "../styles/theme/colors/electric-night.scss";
---

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
  </head>
  <body
    class="electric-night relative bg-slate-950 text-soft h-full grid grid-rows-[1fr_auto]"
  >
    <div
      class="-z-10 fixed bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"
    >
    </div>
    <Header />

    <main>
      <slot />
    </main>

    <footer></footer>
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Space Grotesk", sans-serif;
  }
</style>
